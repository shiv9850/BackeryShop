@{
}
<form asp-controller="Product" asp-action="Edit" method="post">
    <div class="row form-group">
        <label class="col-sm-2 col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control col-sm-10" placeholder="Name" />
    </div>
    <div class="row form-group">
        <label class="col-sm-2 col-form-label" asp-for="Price"></label>
        <input asp-for="Price" class="form-control col-sm-10" placeholder="Price" />
    </div>
    <div class="row form-group">
        <label class="col-sm-2 col-md-2 col-form-label" asp-for="ShortDescription"></label>
        <input asp-for="ShortDescription" class="form-control col-sm-10 col-md-10" placeholder="Short Description" />
    </div>
    <div class="row form-group">
        <label class="col-sm-2 col-form-label" asp-for="FullDescription"></label>
        <textarea asp-for="FullDescription" name="fullDescription" style="height:100px" class="form-control col-sm-10" placeholder="Full Description"></textarea>
    </div>
    <div class="row form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>